            BindRecuriterList();
            BindLocationList();
            BindSubDomainList();
            BindTSRList();
            BindSalesPersonList();
            BindPayRollList();
            $("#btnSave").on("click", function () {
                if (IsValidate()) {
                    SaveData();
                }
            });
        });

        function IsValidate() {
            return true;
        }
        function SaveData() {
            let vm = {
                Cust_Name: "",
