        function clearMessageJQ(ele) {
            $(ele).siblings('span.error').remove();
        }

        function addErrorMessageJQ(ele, msg) {
            const errorCtrl = $('<span />').addClass('error').html(msg);
            $(ele).closest('div').append(errorCtrl);
        }

