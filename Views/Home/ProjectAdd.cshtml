            vm.Id = $("#Id").val();
            vm.SD = $("#startDate").val();
            vm.ED = $("#endDate").val();
            vm.Project_Status = $("#ddlProjectStatus").val();
            vm.Location_Group = $("#ddlLocationGroup").val();
            vm.PayRoll_State = $("#ddlPayrollState").val();
            vm.Sales_Person = $("#endSalesPerson").val();
            vm.Proj_Cat = $("#ddlProjectCatagory").val();
            vm.Proj_Type = $("#ddlProjectType").val();
            vm.Sub_Dom = $("#ddlSubDomain").val();
            vm.TSP = $("#ddlTimesSheetRep").val();
            vm.CIG = $("#ddlClientInvoiceGroup").val();
            vm.TimesheetType = $("#ddlTimesheetType").val();
            /*vm.IVT = $("#endDate").val();*/
            vm.Prac_Type = $("#ddlPracticeType").val();
            vm.Recruiter = $("#ddlRecruiter").val();
            console.log(vm);
            $.ajax({
                method: "POST",
                url: "/ProjectApi/Add",
                dataType: "json",
                data: vm,
                success: function () { },
                error: function () { }
            });
        }
